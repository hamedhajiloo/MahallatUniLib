<!-- Start blog area -->
<div class="blog-area">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="area-title">
                    <h3>تازه ترین خبرها</h3>
                </div>
            </div>
            <div class="blog-box featured-product-area">
                @foreach (var item in Model.News)
                {
                <div class="col-xs-12 col-sm-4">
                    @if (!string.IsNullOrEmpty(item.Link))
                    {
                        <a href="@item.Link"><img style="height:250px; width:300px;" src="~/upload/image/news/normalimage/@item.Picture" alt=""></a>
                    }
                    else
                    {
                        <img style="height:250px; width:300px;" src="~/upload/image/news/normalimage/@item.Picture" alt="">
                    }
                    <span class="blog-date">@item.InserDateP</span>
                    <div class="blog-info">
                        <h3>@item.Title</h3>
                        <h5>@item.Message</h5>
                    </div>
                </div>

                }
            </div>
        </div>
    </div>
</div>
<!-- End blog area -->
