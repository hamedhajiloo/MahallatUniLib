@model ChangePasswordVM
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}
<div class="panel panel-info">
    <div class="panel-heading">
        <h2>نغییر رمز عبور</h2>
    </div>
    <div class="panel-body">
        <style>
            .circleInput {
                border-radius: 3px;
            }
        </style>

        <div class="row center-block box box-primary" style="box-shadow:2px 2px 7px 3px gray;">
            <form asp-controller="UserAccount" asp-action="ChangeUserPassword" asp-area="Admin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-4  col-lg-4" style="margin-bottom:15px; margin-top:15px;">

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control circleInput" placeholder="" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control circleInput" placeholder="" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <input type="hidden" name="UserId" value="@ViewBag.UserId" />

                    <div class="form-group">
                        <input type="submit" value="ویرایش" class="btn btn-success formSubmit" />
                        <a asp-action="DashBoard" asp-controller="Home" class="btn btn-danger">بازگشت</a>
                    </div>

                </div>
            </form>

        </div>

    </div>
</div>




